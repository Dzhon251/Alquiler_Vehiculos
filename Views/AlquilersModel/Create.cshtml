@model Alquiler_Vehiculos.Models.Entity.AlquilerModel

@{
    ViewData["Title"] = "Crear Alquiler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-primary">Nuevo Alquiler</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Selección Cliente -->
            <div class="mb-3">
                <label asp-for="ClienteModelId" class="form-label fw-bold"></label>
                <select asp-for="ClienteModelId" class="form-select" asp-items="ViewBag.ClienteModelId" id="ClienteModelId" onchange="unCliente()">
                    <option value="">Seleccione un Cliente</option>
                </select>
                <span asp-validation-for="ClienteModelId" class="text-danger"></span>
            </div>

            <!-- Datos Cliente -->
            <div class="mb-3">
                <label class="form-label fw-bold">Licencia</label>
                <input id="Licencia" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Teléfono</label>
                <input id="Telefono" class="form-control" readonly />
            </div>

            <!-- Fecha y Código -->
            <div class="mb-3">
                <label asp-for="FechaAlquiler" class="form-label fw-bold"></label>
                <input asp-for="FechaAlquiler" class="form-control" type="date" />
                <span asp-validation-for="FechaAlquiler" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Codigo_Alquiler" class="form-label fw-bold"></label>
                <input asp-for="Codigo_Alquiler" class="form-control" readonly />
                <span asp-validation-for="Codigo_Alquiler" class="text-danger"></span>
            </div>

            <!-- Agregar Vehículo -->
            <button type="button" id="addProduct" class="btn-add mb-3"
                    data-bs-toggle="modal" data-bs-target="#modalVehiculos"
                    onclick="Lista_Vehiculos()">
                + Agregar Vehículo
            </button>

            <!-- Vehículos Seleccionados -->
            <h4>Vehículos Seleccionados</h4>
            <table id="vehiculosTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Vehículo</th>
                        <th>Precio Diario</th>
                        <th>Cantidad</th>
                        <th>Días</th>
                        <th>Total</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

            <!-- Total Alquiler -->
            <div class="mb-3">
                <label asp-for="Total_Alquiler" class="form-label fw-bold"></label>
                <input asp-for="Total_Alquiler" class="form-control" readonly id="Total_Alquiler" />
                <span asp-validation-for="Total_Alquiler" class="text-danger"></span>
            </div>

            <div class="d-grid mb-3">
                <input type="submit" value="Guardar Alquiler" class="btn btn-success btn-lg" />
            </div>
        </form>

        <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
    </div>
</div>

<!-- Modal Vehículos -->
<div class="modal fade" id="modalVehiculos" tabindex="-1" aria-labelledby="modalVehiculosLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar Vehículos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Marca y Modelo</th>
                            <th>Año</th>
                            <th>Cantidad</th>
                            <th>Días</th>
                            <th>Agregar</th>
                        </tr>
                    </thead>
                    <tbody id="Lista_prodcutos"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
