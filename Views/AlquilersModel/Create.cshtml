@model Alquiler_Vehiculos.Models.Entity.AlquilerModel

@{
    ViewData["Title"] = "Crear Alquiler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-primary">Nuevo Alquiler</h2>

<div class="row">
    <div class="col-md-6">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Selección Cliente -->
            <div class="mb-3">
                <label asp-for="ClienteModelId" class="form-label fw-bold"></label>
                <select asp-for="ClienteModelId" class="form-select" asp-items="ViewBag.ClienteModelId" onchange="unCliente()">
                    <option value="">Seleccione un Cliente</option>
                </select>
                <span asp-validation-for="ClienteModelId" class="text-danger"></span>
            </div>

            <!-- Datos del Cliente seleccionados -->
            <div class="mb-3">
                <label class="form-label fw-bold">Licencia</label>
                <input id="Licencia" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Teléfono</label>
                <input id="Telefono" class="form-control" readonly />
            </div>

            <!-- Selección Vehículo -->
            <div class="mb-3">
                <label asp-for="VehiculoModelId" class="form-label fw-bold"></label>
                <select asp-for="VehiculoModelId" class="form-select" asp-items="ViewBag.VehiculoModelId" id="VehiculoModelId" onchange="unVehiculo()">
                    <option value="">Seleccione un Vehículo</option>
                </select>
                <span asp-validation-for="VehiculoModelId" class="text-danger"></span>
            </div>

            <!-- Datos del Vehículo seleccionados -->
            <div class="mb-3">
                <label class="form-label fw-bold">Año</label>
                <input id="Anio" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Disponible</label>
                <input id="Disponible" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="FechaAlquiler" class="form-label fw-bold"></label>
                <input asp-for="FechaAlquiler" class="form-control" type="date" />
                <span asp-validation-for="FechaAlquiler" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Codigo_Alquiler" class="form-label fw-bold"></label>
                <input asp-for="Codigo_Alquiler" class="form-control" />
                <span asp-validation-for="Codigo_Alquiler" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Total_Alquiler" class="form-label fw-bold"></label>
                <input asp-for="Total_Alquiler" class="form-control" />
                <span asp-validation-for="Total_Alquiler" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="isDelete" />
                <label class="form-check-label fw-bold">
                    @Html.DisplayNameFor(model => model.isDelete)
                </label>
            </div>

            <div class="d-grid">
                <input type="submit" value="Guardar" class="btn btn-success btn-lg" />
            </div>

        <button type="button" id="addProduct" class="btn-add"
                data-bs-toggle="modal" data-bs-target="#modalProductos"
                onclick="Lista_Productos()">
            + Agregar Producto
        </button>

        <!-- Botón de enviar -->
        <div class="form-group">
            <button onclick="crear_venta()" class="btn-submit">Guardar Venta</button>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
</div>
